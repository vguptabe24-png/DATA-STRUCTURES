#include <iostream> // ques 5
using namespace std;

int main() {
	int rows, cols;

	cout << "Enter number of rows: ";
	cin >> rows;

	cout << "Enter number of columns: ";
	cin >> cols;

	int arr[100][100];

	cout << "Enter the elements:";
	for (int i = 0; i < rows; i++) {
		for (int j = 0; j < cols; j++) {
			cin >> arr[i][j];
		}
	}


	cout << "Sum of each row:";
	for (int i = 0; i < rows; i++) { // outer loop i goes through each row
		int rowSum = 0;
		for (int j = 0; j < cols; j++) { // inner loop j goes through each coloumn in the current row
			rowSum += arr[i][j];
		}
		cout << "Row " << i << ": " << rowSum << endl;
	}

	cout << "Sum of each column:";
	for (int j = 0; j < cols; j++) { // outer loop j goes through coloumn
		int colSum = 0;
		for (int i = 0; i < rows; i++) { // inner loop i goes through each row in the current column 
			colSum += arr[i][j];
		}
		cout << "Column " << j << ": " << colSum << endl;
	}

	return 0;
}
