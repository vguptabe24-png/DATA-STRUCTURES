#include <iostream>
using namespace std;

int findMissingBinary(int a[], int n) {
    int low = 0, high = n - 2; //(n - 2) because the array has n - 1 elements , low is the starting index of array
    while (low <= high) {
        int mid = (low + high) / 2;
        if (a[mid] == mid + 1) {
            low = mid + 1;
        } else {
            high = mid - 1;
        }
    }
    return low + 1; // When the loop ends, low is pointing to the position where the number is missing
}

int main() {
    int a[] = {1, 2, 3, 5, 6}; // Missing 4
    int n = 6; // Should be from 1 to 6
    cout << "Missing number: " << findMissingBinary(a, n) << endl;
    return 0;
}
