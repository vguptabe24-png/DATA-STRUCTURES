#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter number of days: ";
    cin >> n;

    int temperatures[100];   // assuming max 100 days (can change size if needed)
    int answer[100];

    cout << "Enter temperatures: ";
    for (int i = 0; i < n; i++) {
        cin >> temperatures[i];
        answer[i] = 0;  // initialize with 0
    }

    // Brute force check
    for (int i = 0; i < n; i++) {
        for (int j = i + 1; j < n; j++) {
            if (temperatures[j] > temperatures[i]) {
                answer[i] = j - i; // found warmer day
                break;             // stop searching further
            }
        }
    }

    cout << "Answer: ";
    for (int i = 0; i < n; i++) {
        cout << answer[i] << " ";
    }

    return 0;
}
