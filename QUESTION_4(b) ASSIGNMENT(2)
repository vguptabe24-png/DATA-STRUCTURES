#include <iostream>
using namespace std;

int main() {
    char str[100]; 
    int length = 0;
    cout << "Enter a string: "; // Asking user to enter a string
    cin >> str;

    while (str[length] != '\0') { // Finding the length of the string manually
        length++;
    }

    cout << "Reversed string: "; // Printing the string in reverse order
    for (int i = length - 1; i >= 0; i--) {
        cout << str[i];
    }

    cout << endl;
    return 0;
}
