#include <iostream>
using namespace std;

int main() {
    int arr[100], n, k;

    // input size
    cout << "Enter size of array: ";
    cin >> n;

    // input array elements
    cout << "Enter array elements: ";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    // input k
    cout << "Enter k: ";
    cin >> k;

    int count = 0;

    // check all pairs
    for (int i = 0; i < n; i++) {
        for (int j = i + 1; j < n; j++) {
            int diff = arr[i] - arr[j];
            if (diff < 0) diff = -diff; // absolute value
            if (diff == k) {
                count++;
            }
        }
    }

    cout << "Total pairs = " << count << endl;

    return 0;
}
