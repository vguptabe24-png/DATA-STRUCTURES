#include <iostream>
using namespace std;

class Node {
public:
    int data;
    Node* next;
};

class CircularLinkedList {
    Node* head;
public:
    CircularLinkedList() {
        head = NULL;
    }

    // Function to insert node at end
    void insert(int val) {
        Node* newNode = new Node();
        newNode->data = val;
        newNode->next = NULL;

        if (head == NULL) {          // If list is empty
            head = newNode;
            newNode->next = head;    // Circular connection
        } else {
            Node* temp = head;
            while (temp->next != head)  // Move to last node
                temp = temp->next;
            temp->next = newNode;
            newNode->next = head;       // Connect last node to head
        }
    }

    // Function to display list with head repeated at end
    void display() {
        if (head == NULL) {
            cout << "List is empty!" << endl;
            return;
        }

        Node* temp = head;
        do {
            cout << temp->data << " ";
            temp = temp->next;
        } while (temp != head);

        // Repeat head node value at the end
        cout << head->data << endl;
    }
};

int main() {
    CircularLinkedList cll;

    // Given Input: 20 → 100 → 40 → 80 → 60
    cll.insert(20);
    cll.insert(100);
    cll.insert(40);
    cll.insert(80);
    cll.insert(60);

    cout << "Output: ";
    cll.display();

    return 0;
}
